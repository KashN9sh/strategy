// Консоль разработчика

ui {
  conditional if="console.open" {
    panel #console position=fixed x=0 y=bottom-300 width=100% height=300 background=#000000b3 padding=8 {
      vbox gap=4 {
        // Лог (последние N строк)
        vbox #log_area gap=2 height=240 {
          // Строки лога будут отрисовываться программно
        }
        
        // Строка ввода
        hbox gap=4 {
          text text="> " color=#dcdcb3
          text #input bind="console.input" color=#e6e6e6
        }
      }
    }
  }
}
